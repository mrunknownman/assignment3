<%- include("header") -%>

<div class="container">
    <h1 class="text-center">
      Add new post
    </h1>
    <div class="d-flex justify-content-center">
      <form action="/add-post" method="post" class="card col-10" style="background-color: #EAFF43; color: black;">
        <div class="card-body">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" placeholder="Enter post title">
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="content" class="form-control" placeholder="Enter post content"></textarea>
          </div>
          <div class="form-group mt-2">
            <input type="submit" value="Publish Post" class="btn btn-primary">
          </div>
        </div>
      </form>
    </div>
  </div>

<%- include("footer") -%>